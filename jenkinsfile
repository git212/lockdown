pipeline{
    agent any
    environment{
        PATH = "${PATH}:${tool name: 'maven3', type: 'maven'}/bin"
    stages{
        stage('SCM Checkout'){
            steps{
                git url: 'https://github.com/git212/lockdown.git',
                branch: 'master',
                git credentialsId: 'github',
            }
        }
        stage('Maven Build'){
            steps{
                sh 'mvn clean package'
            }
        }
        stage('Deploy Dev'){
            steps{
                 shagent(['tomcat-dev']) {
                    // stop tomcat
                    sh "ssh -o StrictHostKeyChecking=no ec2-user@172.31.35.67 /opt/tomcat8/bin/shutdown.sh"
                    // copy war file to remote tomcat
                    sh "scp target/lockdown.war ec2-user@172.31.35.67:/opt/tomcat8/webapps/"
                    // start tomcat
                    sh "ssh ec2-user@172.31.35.67 /opt/tomcat8/bin/startup.sh"
                }
            }
        }
    }
}
